{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=DKGartneriDev;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Hangfire": "Debug",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Cors": {
    "Origins": ["http://localhost:3000"]
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": "Debug",
    "WriteTo": [
      { "Name": "Console" },
      { "Name": "Debug" },
      {
        "Name": "File",
        "Args": {
          "path": "./Logs/log.txt",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "./Logs/log.json",
          "rollingInterval": "Day",
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"],
    "Destructure": [
      {
        "Name": "ToMaximumDepth",
        "Args": { "maximumDestructuringDepth": 4 }
      },
      {
        "Name": "ToMaximumStringLength",
        "Args": { "maximumStringLength": 100 }
      },
      {
        "Name": "ToMaximumCollectionCount",
        "Args": { "maximumCollectionCount": 10 }
      }
    ]
  },
  "SuperUser": {
    "Username": "admin@it-minds.dk",
    "Password": "Admin"
  },
  "MailSettings": {
    "Mail": "<fromemail>",
    "DisplayName": "<displayname>",
    "Username": "<username>",
    "Password": "<yourpasswordhere>",
    "Host": "<host>",
    "Port": 587,
    "BaseUrl": "http://localhost:3000",
    "DefaultEmails": [
      {
        "Id": 1,
        "Name": "Invitationsmail",
        "Title": "Velkommen til Dansk Gartneri indeberetningssystem",
        "HtmlContent": "<h2>Velkommen til Dansk Gartneri indeberetningssystem</h2><p>Du er blevet inviteret til at indberette din omsætning gennem vores system. Klik herunder for at aktivere din bruger i systemet.</p>",
        "CtaButtonText": "Aktiver din bruger"
      },
      {
        "Id": 2,
        "Name": "Glemt password email",
        "Title": "Reset dit password til Dansk Gartneri",
        "HtmlContent": "<h2>Reset dit password</h2><p>Du har modtaget denne mail, da du har anmodet om at resette dit password. Klik herunder for at gå til siden og vælge et nyt password.</p>",
        "CtaButtonText": "Vælg nyt password"
      }
    ]
  }
}
