{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=DKGartneriDev;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Hangfire": "Debug",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Cors": {
    "Origins": [ "http://localhost:3000" ]
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": "Debug",
    "WriteTo": [
      { "Name": "Console" },
      { "Name": "Debug" },
      {
        "Name": "File",
        "Args": {
          "path": "./Logs/log.txt",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "./Logs/log.json",
          "rollingInterval": "Day",
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Destructure": [
      {
        "Name": "ToMaximumDepth",
        "Args": { "maximumDestructuringDepth": 4 }
      },
      {
        "Name": "ToMaximumStringLength",
        "Args": { "maximumStringLength": 100 }
      },
      {
        "Name": "ToMaximumCollectionCount",
        "Args": { "maximumCollectionCount": 10 }
      }
    ]
  },
  "SuperUser": {
    "Username": "admin@it-minds.dk",
    "Password": "Admin"
  },
  "MailSettings": {
    "Mail": "<fromemail>",
    "DisplayName": "<displayname>",
    "Username": "<username>",
    "Password": "<yourpasswordhere>",
    "Host": "<host>",
    "Port": 587,
    "BaseUrl": "http://localhost:3000",
    "DefaultEmails": [
      {
        "Id": 1,
        "Name": "Invitationsmail",
        "Subject": "Velkommen til Dansk Gartneri indberetningssystem",
        "Heading1": "Velkommen til Dansk Gartneri indberetningssystem",
        "Paragraph1": "Du er blevet inviteret til at indberette din omsætning gennem vores system. Klik herunder for at aktivere din bruger i systemet.",
        "CtaButtonText": "Aktiver din bruger"
      },
      {
        "Id": 2,
        "Name": "Glemt password email",
        "Subject": "Reset dit password til Dansk Gartneri",
        "Heading1": "Reset dit password",
        "Paragraph1": "Du har modtaget denne mail, da du har anmodet om at ændre dit password. Klik herunder for at gå til siden og vælge et nyt password.",
        "CtaButtonText": "Vælg nyt password"
      },
      {
        "Id": 3,
        "Name": "Invitation til at udfylde oplysningsskema",
        "Subject": "Invitation til at udfylde oplysningsskema",
        "Heading1": "Indsend dit oplysningsskema",
        "Paragraph1": "Du er blevet inviteret til at udfylde og indsende et oplysningsskema for dette revisionsår i Dansk Gartneris indberetningssystem. Klik herunder for at gå til siden og udfylde dit skema.",
        "CtaButtonText": "Gå til oplysningsskema"
      }
    ]
  },
  "Statements": {
    "LimitForRequiredAccountant": 100000
  },
  "FileDrive": {
    "StatementPath": "./wwwroot/debugImages/statements"
  } 
}
